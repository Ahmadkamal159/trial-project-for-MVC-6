@model UniversityDTO

<h1 class="form-control"> @Model.Name Details </h1>

<div class="form-group">
    <label asp-for="Id" class="control-label"></label>
    <h1 class="form-control-plaintext">@Model.Id</h1>
    <span asp-validation-for="Id" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <h1 class="form-control-plaintext">@Model.Name</h1>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Location" class="control-label"></label>
    <h1 class="form-control-plaintext">@Model.Location</h1>
    <span asp-validation-for="Location" class="text-danger"></span>
</div>

<div srcset="form-group">
<a asp-controller="University" class="btn btn-primary" asp-action="Edit" onclick="ConfirmEdit(event)" asp-route-Id="@Model.Id"> Edit </a>
<a asp-controller="University" class="btn btn-danger" asp-action="Delete"  onclick="ConfirmDelete(event)" asp-route-Id="@Model.Id"> Delete </a>
</div>
