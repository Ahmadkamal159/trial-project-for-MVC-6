
@model CollegeDTO

<form method="post" asp-action="Add">

    <h1 class="form-control"> Please Add College </h1>

    <div class="form-group">

        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div class="form-group">

        <label asp-for="UniversityId" class="control-label"></label>
        <select asp-for="UniversityId" class="form-select" required="true">
            <option value="" selected="selected" disabled="disabled" hidden="hidden">Please select a University</option>
            @foreach (var item in ViewBag.universities)
            {
                <option value="@item.Id" >@item.Name</option>
            }
        </select>

    </div>

    <input value="Add College" type="submit" class="btn btn-primary" />

</form>